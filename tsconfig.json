{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["DOM", "ES2021"],
    "target": "ES2020",
    "types": ["node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@command": ["command"],
      "@configs": ["configs"],
      "@contracts": ["contracts"],
      "@providers": ["providers"],
      "@scripts": ["scripts"],
      "@utils": ["utils"]
    }
  },
  "ts-node": {
    "swc": true,
    "require": ["tsconfig-paths/register"]
  }
}
